{
    "[markdown]": {
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
            "source.organizeImports": "always"
        },
        "editor.formatOnSave": true
    },
    "[scala]": {
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
            "source.organizeImports": "always"
        },
        "editor.formatOnSave": false
    },
    "files.watcherExclude": {
        "**/target": true
    },
    "metals.showImplicitArguments": true
}